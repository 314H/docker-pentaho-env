<?xml version="1.0" encoding="UTF-8"?>
<Context path="/pentaho" docbase="webapps/pentaho/">
	<Resource name="jdbc/Hibernate" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxTotal="20" maxIdle="5"
		maxWaitMillis="10000" username="%PREFIX%hibuser" password="%PASSWORD%"
		driverClassName="com.mysql.jdbc.Driver" url="jdbc:mysql://%SERVER%:%PORT%/%PREFIX%hibernate"
		validationQuery="select 1" />
		
	<Resource name="jdbc/Quartz" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxTotal="20" maxIdle="5"
		maxWaitMillis="10000" username="%PREFIX%pentaho_user" password="%PASSWORD%"
		driverClassName="com.mysql.jdbc.Driver" url="jdbc:mysql://%SERVER%:%PORT%/%PREFIX%quartz"
		validationQuery="select 1"/>

</Context>
